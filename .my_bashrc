alias tmux="TERM=screen-256color tmux"
export EDITOR=vim

# root's PS1
#PS1='\[\e[0;45m\]\u\[\e[m\] \[\e[1;34m\]\w\[\e[m\] \[\e[1;32m\]\$\[\e[0m\] '
PS1='\[\e[0;46m\]\u\[\e[m\] \[\e[1;34m\]\w\[\e[m\] \[\e[1;32m\]\$\[\e[0m\] '

if [[ -f "$HOME/.ssh/environment" ]]; then
    SSH_ENV="$HOME/.ssh/environment"

    function start_agent {
         echo "Initialising new SSH agent..."
         /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
         echo succeeded
         chmod 600 "${SSH_ENV}"
         . "${SSH_ENV}" > /dev/null
         /usr/bin/ssh-add;
    }

    # Source SSH settings, if applicable

    if [ -f "${SSH_ENV}" ]; then
         . "${SSH_ENV}" > /dev/null
         #ps ${SSH_AGENT_PID} doesn't work under cywgin
         ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
             start_agent;
         }
    else
         start_agent;
    fi
fi

PATH=$PATH:$HOME/devel/bin

setxkbmap -layout "us,ru" -option "grp:rctrl_toggle,grp_led:scroll,compose:menu,ctrl:swapcaps"

. $HOME/devel/otp/R16B03-1/activate
